{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch TS Node",
      "request": "launch",
      "program":"${file}",
      // "program":"${relativeFile}",
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "type": "pwa-node",
      "trace": true,
    },
    {
      "name": "Current JS File",
      "type": "node",
      "request": "launch",
      "args": [
        "${relativeFile}"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    }
  ]
}