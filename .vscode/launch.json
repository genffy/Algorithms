{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/ts-node",
      "args": [
        "${relativeFile}"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    },
    {
      "name": "Current JS File",
      "type": "node",
      "request": "launch",
      "args": [
        "${relativeFile}"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    }
  ]
}